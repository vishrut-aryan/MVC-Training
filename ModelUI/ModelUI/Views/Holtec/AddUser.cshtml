<body>
    <header>
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <h1><b>Traffic Fine System</b></h1>
                </div>
                <div class="col-lg-4">
                    <div class="pull-right social" style="padding-top:10px;">
                        <a>Welcome</a>
                        <a><i class="fa fa-user"></i>&nbsp;&nbsp;User Name</a>|
                        <a href="Login.html"><i class="fa fa-sign-out"></i>&nbsp;&nbsp;Logout</a>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <section>
        <div class="container bg">
            <!--<div class="row text-center">
                <div class="col-lg-12">

                </div>
            </div>-->
            <div class="row">
                <div class="col-lg-2 col-md-2 col-sm-2 bd">
                    <h4 class="text-danger">TFS</h4>
                    <hr style="border-color:#933" />
                    <a href="InitiateFine.html">Initiate Fine</a><hr class="hr1" />
                    <a href="UpdateFT.html">Update Fine Transaction</a><hr class="hr1" />
                    <a href="UpdatePR.html">Update Payment receipt</a><hr class="hr1" />
                    <a href="ConflictCase.html">Conflict Case</a><hr class="hr1" />
                    <a>Reports</a><hr class="hr1" />
                    <a href="UserAdmin.html">User Admin</a><hr class="hr1" />
                </div>
                <div class="col-lg-10 col-md-10 col-sm-10">
                    <div class="row bar">
                        <h3><span class="fa fa-user text-danger"></span>&nbsp; Add User</h3>
                    </div>
                    <br />
                    <form class="form-horizontal" role="form">
                        <div class="form-group">
                            <label for="name" class="col-md-2 col-sm-2 control-label">User Name:</label>
                            <div class="col-lg-4 col-md-4 col-sm-5">
                                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="text" class="col-md-2 col-sm-2 control-label">Password:</label>
                            <div class="col-lg-4 col-md-4 col-sm-5">
                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="text" class="col-md-2 col-sm-2 control-label">Email:</label>
                            <div class="col-lg-4 col-md-4 col-sm-5">
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="text" class="col-md-2 col-sm-2 control-label">Mobile No:</label>
                            <div class="col-lg-4 col-md-4 col-sm-5">
                                @Html.EditorFor(model => model.MobileNo, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.MobileNo, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="text" class="col-md-2 col-sm-2 control-label">Designation:</label>
                            <div class="col-lg-4 col-md-4 col-sm-5">
                                @Html.EditorFor(model => model.Designation, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Designation, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <a class="btn btn-default" id="btnLogin" href="UserAdmin.html">Add User</a>
                                <a class="btn btn-default" href="AddUser">Cancel</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
